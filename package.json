{
  "name": "ts-react-starter",
  "version": "1.0.0",
  "description": "A simple starter for typescript & react using webpack.",
  "main": "index.js",
  "author": "Devjeet Roy",
  "license": "MIT",
  "scripts": {
    "start": "yarn webpack serve --mode development --config webpack.dev.js --stats minimal",
    "build": "yarn webpack --mode production --config webpack.prod.js",
    "storybook": "start-storybook -p 6006 --no-dll",
    "build-storybook": "build-storybook --no-dll"
